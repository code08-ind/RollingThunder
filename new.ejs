<%- include("../partials/header") %>
    <div class="row">
        <h1 class="text-center" style="font-weight:bold; margin-bottom:3rem;">
            Create A New Campground
        </h1>
		<div style="width: 30%; margin:auto;">
          <form action="/campgrounds" method="POST">
			  <div class="form-group">
				  <input type="text" class="form-control" name="name" placeholder="Name" />
			  </div>
			  <div class="form-group">
				  <input type="number" class="form-control" name="price" placeholder="Price Of Campground" min="400" step="50" />
			  </div>
              <div class="form-group">
				 <input type="text" class="form-control" name="image" placeholder="Image Url" />
			  </div>
			  <div class="form-group">
				 <input type="text" class="form-control" name="description" placeholder="Description" />
			  </div>
              <div class="form-group">
				  <button class="btn btn-lg btn-primary btn-default btn-block">
					   Submit!
                 </button>
			  </div>
             <br>
             <a href="/campgrounds" class="text-center">Back To Campgrounds Page</a>
         </form>
        </div>
    </div>

<%- include("../partials/footer") %>