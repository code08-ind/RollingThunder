<%- include("../partials/header") %>
    <div class="row">
        <h1 class="text-center" style="font-weight: bold; margin-bottom: 3rem;">
            Edit Campground <%= campground.name %>
        </h1>
        <div style="width: 30%; margin: auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input
                        type="text"
                        class="form-control"
                        name="campground[name]"
                        value="<%= campground.name %>"
                    />
                </div>
                <div class="form-group">
                    <input
                        type="number"
                        class="form-control"
                        name="campground[price]"
                        value="<%= campground.price %>"
                        min="400"
                        step="50"
                    />
                </div>
                <div class="form-group">
                    <input
                        type="text"
                        class="form-control"
                        name="campground[image]"
                        value="<%= campground.image %>"
                    />
                </div>
                <div class="form-group">
                    <input
                        type="text"
                        class="form-control"
                        name="campground[description]"
                        value="<%= campground.description %>"
                    />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">
                        Submit!
                    </button>
                </div>
                <br />
                <a href="/campgrounds" class="text-center">Back To Campgrounds Page</a>
            </form>
        </div>
    </div>

<%- include("../partials/footer") %>